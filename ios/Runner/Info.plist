<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Camera Access -->
	<key>NSCameraUsageDescription</key>
	<string>The Right Direction needs camera access to detect objects for navigation assistance and recognize sign language gestures.</string>
	
	<!-- Microphone Access -->
	<key>NSMicrophoneUsageDescription</key>
	<string>The Right Direction needs microphone access to provide real-time speech-to-text transcription for deaf users.</string>
	
	<!-- Speech Recognition -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>The Right Direction uses speech recognition to transcribe spoken words into text for deaf users.</string>
	
	<!-- LiDAR/ARKit -->
	<key>NSWorldReconstructionUsageDescription</key>
	<string>The Right Direction uses LiDAR for precise depth sensing to detect obstacles and provide navigation assistance for blind users.</string>
	
	<!-- Location (for ARKit) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>The Right Direction may use location to enhance navigation assistance.</string>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>generativelanguage.googleapis.com</key>
			<dict>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSThirdPartyExceptionRequiresForwardSecrecy</key>
				<false/>
			</dict>
		</dict>
	</dict>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
	</array>
	
	<!-- Accessibility -->
	<key>UIAccessibilityPerformEscapeAction</key>
	<true/>
	
	<!-- Supported Interface Orientations -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Launch Storyboard -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	
	<!-- Main Storyboard -->
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	
	<!-- Required Device Capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	
	<!-- Status Bar -->
	<key>UIStatusBarHidden</key>
	<false/>
	
	<!-- Status Bar Style -->
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>
	
	<!-- Bundle Info -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>The Right Direction</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>the_right_direction</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
</dict>
</plist>
