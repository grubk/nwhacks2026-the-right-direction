<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.therightdirection">
    
    <!-- Camera permission for object detection and sign language recognition -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Microphone permission for speech recognition -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Vibration permission for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Internet permission for Gemini AI integration -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Foreground service for continuous recognition -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    
    <!-- Wake lock to keep processing in background -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Camera feature declaration -->
    <uses-feature 
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature 
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    
    <!-- Microphone feature declaration -->
    <uses-feature 
        android:name="android.hardware.microphone"
        android:required="true" />
    
    <!-- Vibration feature declaration -->
    <uses-feature 
        android:name="android.hardware.vibration"
        android:required="false" />

    <application
        android:label="The Right Direction"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="false"
        android:enableOnBackInvokedCallback="true">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Specifies an Android theme to apply to this Activity as soon as
                 the Android process has started. This theme is visible to the user
                 while the Flutter UI initializes. After that, this theme continues
                 to determine the Window background behind the Flutter UI. -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- Foreground service for continuous accessibility features -->
        <service
            android:name=".AccessibilityForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="camera|microphone" />
        
        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <!-- TensorFlow Lite GPU Delegate -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr,barcode,face,object" />
            
    </application>
    
    <!-- Queries for speech recognition -->
    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>
</manifest>
